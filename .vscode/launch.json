{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Launch Backend Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ğŸ§ª Debug Test: Supabase",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test-supabase.js",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "ğŸ¥ Debug Test: API Health",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test-api-health.js",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "ğŸ” Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "ğŸ› Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
