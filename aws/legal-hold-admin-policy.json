{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAdminLegalHoldOperations",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID:role/LegalHoldAdminRole"
      },
      "Action": [
        "s3:PutObjectLegalHold",
        "s3:GetObjectLegalHold",
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:GetObjectRetention"
      ],
      "Resource": [
        "arn:aws:s3:::LEGAL_RECEIPTS_BUCKET_NAME/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:PrincipalOrgID": "ORGANIZATION_ID"
        }
      }
    },
    {
      "Sid": "DenyNonAdminLegalHoldOperations",
      "Effect": "Deny",
      "Principal": "*",
      "Action": [
        "s3:PutObjectLegalHold",
        "s3:GetObjectLegalHold"
      ],
      "Resource": [
        "arn:aws:s3:::LEGAL_RECEIPTS_BUCKET_NAME/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalArn": "arn:aws:iam::ACCOUNT_ID:role/LegalHoldAdminRole"
        }
      }
    },
    {
      "Sid": "AllowAdminOnlyConsoleAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID:role/LegalHoldAdminRole"
      },
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketObjectLockConfiguration",
        "s3:GetBucketVersioning"
      ],
      "Resource": "arn:aws:s3:::LEGAL_RECEIPTS_BUCKET_NAME"
    }
  ]
}
